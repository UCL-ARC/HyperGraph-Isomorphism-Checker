		            uint numNodesH,
					uint *NodeLabelIndexH,
					uint nodePrevsArraySizeH,  uint nodeNextsArraySizeH,
					uint *NodePrevsH, uint *NodeNextsH,

					uint *NodeStartPrevsStartH,
